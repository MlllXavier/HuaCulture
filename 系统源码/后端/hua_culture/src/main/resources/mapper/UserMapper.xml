<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.good_ghost.hua_culture.mapper.UserMapper">

    <select id="getAll" resultType="User">
        SELECT * FROM user
    </select>

    <select id="getById" resultType="User">
        SELECT * FROM user where username = #{id}
    </select>

    <insert id="saveUser" parameterType="com.good_ghost.hua_culture.entity.User">
        INSERT INTO user (username,password,name,photo,intro,classes,like_num,comment_num,is_verifiable,time)
        values (#{username},#{password},#{name},#{photo},#{intro},#{classes},#{like_num},#{comment_num},#{is_verifiable},#{time})
    </insert>

</mapper>